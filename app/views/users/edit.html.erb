<h2>Edit <%= @user.name %></h2>

<%= form_for @user do |f| %>

  <div class="field">
    <%= f.label :name %>
    <br />
  <%= f.text_field :name %>
</div>

  <div class="field">
    <%= f.label :email %>
    <br />
  <%= f.email_field :email %>
</div>

<% if current_user.admin? %>
<div class="field">
  <%= f.label :admin %>
  <br />
  <%= f.check_box :admin %>
</div>
<% end %>

  <div>
    <%= f.submit "Update", class: 'btn btn-default' %>
  </div>
<% end %>

<%= link_to "Back", :back %>