<h2>Report : <%= @user.name %></h2>

<table class="table">
  <tr>
    <th><%= sortable_column "Title" %></th>
    <th><%= sortable_column "starts_at" %></th>
    <th><%= sortable_column "ends_at" %></th>
    <th>Description</th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.title %></td>
    <td><%= event.starts_at %></td>
    <td><%= event.ends_at %></td>
    <td><%= event.description %></td>
  </tr>
<% end %>
</table>