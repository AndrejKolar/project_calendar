<!DOCTYPE html>
<html>
<head>
  <title>ProjectCalendar</title>

  <%= javascript_include_tag "jquery.js" %>
  <%= javascript_include_tag "jquery.rest.js" %>
  <%= javascript_include_tag "rails.js" %>
  <%= javascript_include_tag "jquery-ui-1.8.11.custom.min.js" %>

  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>

  <%= csrf_meta_tags %>
</head>
<body>

<!--  Navigation bar -->
<nav class="navbar navbar-default" role="navigation">
  <div class="navbar-header">
    <a class="navbar-brand" href="#">Bit by bit</a>
  </div>
  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    <ul class="nav navbar-nav navbar-left">
      <li><%=link_to "Calendar", calendar_index_path if params[:controller] == 'calendar' || params[:controller] == 'events'  %></li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>
    </ul>
  </div>
</nav>

<!--  Flash messages -->
<% if notice || alert %>
  <div class="container">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </div>
<% end %>


<!--  Content -->
<div class="container">
  <%= yield %>
</div>


</body>
</html>
